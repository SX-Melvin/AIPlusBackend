    "autoReload": true,
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "./logs/aiplus-${shortdate}.log",
        "layout": "${longdate} | ${level:uppercase=true} | ${callsite}(${callsite-linenumber}) | ${message} ${exception:format=StackTrace}"
      },
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate} | ${level:uppercase=true} | ${logger} | ${message}"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Fatal",
        "final": true
      },
      {
        "logger": "System.*",
        "maxLevel": "Fatal",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logfile,logconsole"
      }
    ]
  }
}
